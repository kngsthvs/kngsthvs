{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^types", "^build"],
      "env": ["ANALYZE"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "storybook": {
      "outputs": ["dist/**", "storybook-static/**"]
    },
    "storybook-build": {
      "outputs": ["dist/**", "storybook-static/**"]
    },
    "types": {
      "dependsOn": ["^types"],
      "outputs": ["dist/**"]
    }
  }
}
